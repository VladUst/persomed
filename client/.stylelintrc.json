{
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines",
      "stylelint-config-idiomatic-order"
    ],
    "rules": { 
      "selector-class-pattern": null,
      "@stylistic/indentation": 4,
      "max-nesting-depth": 2,
      "declaration-property-value-disallowed-list": null
    },
    "ignoreFiles": [
      "build/**",
      "coverage/**",
      "dist/**",
      "**/*.js",
      "**/*.jsx", 
      "**/*.ts",
      "**/*.tsx"  
    ] 
}